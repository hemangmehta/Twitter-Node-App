<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- TWITTER INFORMATION -->

		<div class="col-sm-6">
			<div class="">
				<form action="/tweet" method="post" name="frm_tweet">
					<h3 class="text-info"><span class="fa fa-twitter"></span> Tweet Here</h3>
						<textarea name="tweet" placeholder="Enter Your Text" style="min-height:100px;width: 100%"></textarea><br/><br/>
						<div style="float: right">
							<span>140</span>
							<button type="submit" name="btn_submit">Tweet</button>
						</div>
				</form>
			</div>
		</div>

		<div class="col-sm-6">
			<div class="well">
				<h3 class="text-info">List of Tweets</h3>

					<p>
						<table style="width: 100%;">
							<% for(var i=0; i < data.length; i++) { %>
							<tr>
								<td><h4>Tweet <%= i+1%> : </h4></td>
								<td><%= data[i].tweet %></td>
								<td><%= moment(data[i].createdAt).format('MM DD YYYY') %></td>
							</tr>
							<% } %>
						</table>
					</p>
			</div>
		</div>
	</div>
</div>
</body>
</html>
